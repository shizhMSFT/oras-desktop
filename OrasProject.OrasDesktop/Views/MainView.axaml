<UserControl
  x:Class="OrasProject.OrasDesktop.Views.MainView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:OrasProject.OrasDesktop.ViewModels"
  xmlns:svc="clr-namespace:OrasProject.OrasDesktop.Services"
  d:DesignHeight="600"
  d:DesignWidth="1000"
  x:DataType="vm:MainViewModel"
  mc:Ignorable="d">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*,Auto,Auto">
    <!--  Row 0 & 1: Combined layout with connection spanning left columns  -->
    <Grid Grid.Row="0" Grid.RowSpan="2" ColumnDefinitions="500,*">
      
      <!-- Left side: Connection + Repositories/Tags (stacked vertically) -->
      <Grid Grid.Column="0" RowDefinitions="Auto,*">
        <!-- Connection controls at top -->
        <StackPanel
          Grid.Row="0"
          Margin="10,10,5,10"
          Orientation="Horizontal"
          Spacing="5">
          <TextBlock
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="Registry:" />
          <TextBox
            Name="RegistryTextBox"
            Width="250"
            Text="{Binding RegistryUrl}"
            Watermark="Enter registry (e.g., mcr.microsoft.com)"
            ToolTip.Tip="Press Enter to connect, or Shift+Enter to force login">
            <TextBox.KeyBindings>
              <KeyBinding Command="{Binding ConnectCommand}" Gesture="Enter" />
              <KeyBinding Command="{Binding ForceLoginCommand}" Gesture="Shift+Enter" CommandParameter="True" />
            </TextBox.KeyBindings>
          </TextBox>
          <Button
            Name="ConnectButton"
            Command="{Binding ConnectCommand}"
            ToolTip.Tip="Click to connect anonymously, or hold Shift to force login">
            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
              <Path
                Width="16"
                Height="16"
                Data="M10,17V14H3V10H10V7L15,12L10,17M19,3H12V5H19V19H12V21H19C20.1,21 21,20.1 21,19V5C21,3.9 20.1,3 19,3Z"
                Fill="{DynamicResource ButtonForeground}"
                Stretch="Uniform"
                VerticalAlignment="Center" />
              <TextBlock Text="Connect" VerticalAlignment="Center" />
            </StackPanel>
          </Button>
        </StackPanel>
        
        <!-- Repositories and Tags side by side -->
        <Grid Grid.Row="1" ColumnDefinitions="250,250">
          <!--  Repositories  -->
          <Grid
            Grid.Column="0"
            Margin="10,0,5,0"
            RowDefinitions="Auto,Auto,*">
            <StackPanel
              Grid.Row="0"
              Margin="0,0,0,2"
              Orientation="Horizontal"
              Spacing="4"
              VerticalAlignment="Center">
              <TextBlock
                Classes="section-header"
                VerticalAlignment="Center"
                Text="Repositories" />
              <Button
                Width="24"
                Height="24"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding RefreshRepositoriesCommand}"
                IsEnabled="{Binding HasRepositories}"
                ToolTip.Tip="Refresh repository list">
                <Button.Styles>
                  <Style Selector="Button:disabled">
                    <Setter Property="Opacity" Value="0.35" />
                    <Setter Property="Background" Value="Transparent" />
                  </Style>
                </Button.Styles>
                <Path
                  Width="16"
                  Height="16"
                  Data="M12,4A8,8 0 0,0 4,12H1L5,16L9,12H6A6,6 0 0,1 12,6C14.17,6 16.11,7.03 17.33,8.67L18.8,7.4C17.18,5.22 14.73,4 12,4M19,8L15,12L19,16V13A6,6 0 0,1 13,19C10.83,19 8.89,17.97 7.67,16.33L6.2,17.6C7.82,19.78 10.27,21 13,21A8,8 0 0,0 21,13H24L20,9Z"
                  Fill="{DynamicResource ButtonForeground}"
                  Stretch="Uniform" />
              </Button>
            </StackPanel>
            <TextBox
              Grid.Row="1"
              Watermark="Filter repositories..."
              Text="{Binding RepositoryFilterText}" />
            <TreeView
              Grid.Row="2"
              ItemsSource="{Binding FilteredRepositories}"
              SelectedItem="{Binding SelectedRepository}">
              <TreeView.Styles>
                <Style Selector="TreeViewItem">
                  <Setter Property="IsExpanded">
                    <Setter.Value>
                      <Binding Path="IsExpanded" />
                    </Setter.Value>
                  </Setter>
                </Style>
              </TreeView.Styles>
              <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding Children}">
                  <TextBlock Text="{Binding Name}" />
                </TreeDataTemplate>
              </TreeView.ItemTemplate>
            </TreeView>
          </Grid>

          <!--  Tags  -->
          <Grid
            Grid.Column="1"
            Margin="0,0,5,0"
            RowDefinitions="Auto,Auto,*">
            <StackPanel
              Grid.Row="0"
              Margin="0,0,0,2"
              Orientation="Horizontal"
              Spacing="4"
              VerticalAlignment="Center">
              <TextBlock
                Classes="section-header"
                VerticalAlignment="Center"
                Text="Tags" />
              <Button
                Width="24"
                Height="24"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding RefreshTagsCommand}"
                ToolTip.Tip="Refresh tags for selected repository">
                <Path
                  Width="16"
                  Height="16"
                  Data="M12,4A8,8 0 0,0 4,12H1L5,16L9,12H6A6,6 0 0,1 12,6C14.17,6 16.11,7.03 17.33,8.67L18.8,7.4C17.18,5.22 14.73,4 12,4M19,8L15,12L19,16V13A6,6 0 0,1 13,19C10.83,19 8.89,17.97 7.67,16.33L6.2,17.6C7.82,19.78 10.27,21 13,21A8,8 0 0,0 21,13H24L20,9Z"
                  Fill="{DynamicResource ButtonForeground}"
                  Stretch="Uniform" />
              </Button>
            </StackPanel>
            <TextBox
              Grid.Row="1"
              Margin="0,0,0,3"
              Watermark="Filter tags..."
              Text="{Binding TagFilterText}" />
            <ListBox
              Grid.Row="2"
              ItemsSource="{Binding Tags}"
              SelectedItem="{Binding SelectedTag}">
              <ListBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Name}" />
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
          </Grid>
        </Grid>
      </Grid>

      <!-- Right side: Artifact Details Panel -->
      <Grid
        Grid.Column="1"
        Margin="0,10,10,0"
        IsVisible="{Binding CurrentManifest.Digest, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
        
        <!-- Content with darker background -->
        <Border
          Classes="artifact-panel"
          CornerRadius="3"
          BorderThickness="1">
          <Grid RowDefinitions="Auto,*">
            <!-- Header with action buttons (non-scrolling) -->
            <Grid Grid.Row="0" Margin="12,12,12,10" ColumnDefinitions="Auto,*,Auto">
              <TextBlock
                Classes="section-header"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Artifact Details" />
              
              <Button
                Grid.Column="2"
                Width="28"
                Height="28"
                Padding="0"
                Command="{Binding DeleteManifestCommand}"
                IsEnabled="{Binding CanModifySelectedTag}"
                ToolTip.Tip="Delete manifest"
                HorizontalAlignment="Right">
                <Button.Styles>
                  <Style Selector="Button:disabled">
                    <Setter Property="Opacity" Value="0.3" />
                  </Style>
                </Button.Styles>
                <Path
                  Width="16"
                  Height="16"
                  Data="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z"
                  Fill="{DynamicResource ButtonForeground}"
                  Stretch="Uniform" />
              </Button>
            </Grid>
            
            <!-- Content split into static info and tabs -->
            <Grid Grid.Row="1" RowDefinitions="Auto,*">
              <!-- Static info (scrollable if needed) -->
              <ScrollViewer
                Grid.Row="0"
                Padding="12,0,12,0"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                MaxHeight="250">
                <StackPanel>
                  <!-- Digest -->
                  <StackPanel Margin="0,0,0,10" Orientation="Horizontal" Spacing="10"
                              IsVisible="{Binding CurrentManifest, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock
                      Classes="artifact-label"
                      Text="Digest:"
                      VerticalAlignment="Center" />
                    <TextBlock
                      Classes="artifact-value"
                      Text="{Binding CurrentManifest.Digest}"
                      VerticalAlignment="Center"
                      TextTrimming="CharacterEllipsis" />
                  </StackPanel>
                  
                  <!-- Size Summary -->
                  <StackPanel Margin="0,0,0,10" Orientation="Horizontal" Spacing="10"
                              IsVisible="{Binding ArtifactSizeSummary, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock
                      Classes="artifact-label"
                      Text="Image size:"
                      VerticalAlignment="Center" />
                    <TextBlock
                      Classes="artifact-value"
                      Text="{Binding ArtifactSizeSummary}"
                      VerticalAlignment="Center" />
                  </StackPanel>

                  <!-- Platform Image Sizes -->
                  <Grid Margin="0,0,0,10" IsVisible="{Binding HasPlatformSizes}">
                    <Grid.RowDefinitions>
                      <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                      Classes="artifact-label"
                      Grid.Row="0" 
                      Margin="0,0,0,8" 
                      Text="Platform Image Sizes:" 
                      VerticalAlignment="Center" />
                    <Border
                      Grid.Row="1"
                      BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                      BorderThickness="1"
                      CornerRadius="3"
                      MinHeight="60"
                      MaxHeight="150"
                      Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                      <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0">
                        <ItemsControl ItemsSource="{Binding PlatformImageSizes}" Margin="4">
                          <ItemsControl.ItemTemplate>
                            <DataTemplate>
                              <Border Margin="0,2" Padding="6,4" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,0,1">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                  <Button Grid.Column="0" Padding="4,2" Background="Transparent" 
                                          BorderThickness="0" Cursor="Hand"
                                          Command="{Binding $parent[ItemsControl].((vm:MainViewModel)DataContext).ViewPlatformManifestCommand}"
                                          CommandParameter="{Binding}"
                                          ToolTip.Tip="Click to view platform-specific manifest">
                                    <TextBlock Classes="platform-name"
                                              Text="{Binding Platform}"
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource SystemAccentColor}"/>
                                  </Button>
                                  <ProgressBar Grid.Column="1" Margin="12,0" Height="8" Minimum="0" Maximum="100" 
                                              Value="{Binding RelativePercentage}" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}" Foreground="{DynamicResource SystemAccentColor}"/>
                                  <TextBlock Classes="artifact-value"
                                            Grid.Column="2" 
                                            Text="{Binding HumanReadableSize}" 
                                            VerticalAlignment="Center"/>
                                </Grid>
                              </Border>
                            </DataTemplate>
                          </ItemsControl.ItemTemplate>
                        </ItemsControl>
                      </ScrollViewer>
                    </Border>
                  </Grid>
                </StackPanel>
              </ScrollViewer>

              <!-- TabControl (expands with window) -->
              <TabControl
                Grid.Row="1"
                x:Name="ManifestTabs"
                Background="Transparent"
                BorderThickness="0"
                Margin="0,16,0,12"
                MinHeight="150"
                Padding="0">
                <TabControl.Styles>
                  <!-- Style TabItems with custom template to remove underlines -->
                  <Style Selector="#ManifestTabs > TabItem">
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumHighBrush}" />
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,0,0,0"/>
                    <Setter Property="Padding" Value="8,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="MinHeight" Value="20"/>
                    <Setter Property="Template">
                      <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                          <Border Background="{TemplateBinding Background}" 
                                  Padding="{TemplateBinding Padding}"
                                  BorderThickness="0"
                                  BorderBrush="Transparent">
                            <ContentPresenter
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Content="{TemplateBinding Header}"
                              Foreground="{TemplateBinding Foreground}" />
                          </Border>
                        </ControlTemplate>
                      </Setter.Value>
                    </Setter>
                  </Style>

                  <!-- Hover state -->
                  <Style Selector="#ManifestTabs > TabItem:pointerover">
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                  </Style>

                  <!-- Selected state -->
                  <Style Selector="#ManifestTabs > TabItem:selected">
                    <Setter Property="Background" Value="{DynamicResource TabSelectedBackground}" />
                    <Setter Property="Foreground" Value="{DynamicResource TabSelectedForeground}" />
                    <Setter Property="FontWeight" Value="Bold" />
                  </Style>
                </TabControl.Styles>
                <TabItem Header="Manifest">
                  <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <Border
                      Background="{DynamicResource TabContentBackground}"
                      BorderBrush="{DynamicResource TabContentBorder}"
                      BorderThickness="0"
                      CornerRadius="0"
                      Padding="12,4,12,12"
                      Margin="0,2,0,0">
                      <ContentControl
                        Content="{Binding ManifestViewer}"
                        Padding="4,4,20,4"
                        Background="Transparent"
                        FontFamily="Consolas"
                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />
                    </Border>
                  </ScrollViewer>
                </TabItem>
                <TabItem Header="Referrers">
                  <ScrollViewer 
                    VerticalScrollBarVisibility="Auto">
                    <Border
                      Background="{DynamicResource TabContentBackground}"
                      BorderBrush="{DynamicResource TabContentBorder}"
                      BorderThickness="0"
                      CornerRadius="0"
                      Padding="12,4,12,12"
                      Margin="0,2,0,0">
                      <TreeView ItemsSource="{Binding Referrers}" Classes="code-view">
                        <TreeView.ItemTemplate>
                          <TreeDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                              <TextBlock Text="{Binding Display}" FontFamily="Consolas" />
                            </StackPanel>
                          </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                      </TreeView>
                    </Border>
                  </ScrollViewer>
                </TabItem>
              </TabControl>
            </Grid>
          </Grid>
        </Border>
      </Grid>
    </Grid>

    <!--  Row 2: Reference  -->
    <Border
      Grid.Row="2"
      Margin="0"
      BorderThickness="0"
      Background="{DynamicResource SystemControlBackgroundChromeHighBrush}">
      <Grid 
        Margin="8,6"
        ColumnDefinitions="Auto,*,Auto,Auto">
        <StackPanel 
          Grid.Column="0" 
          Orientation="Horizontal" 
          Spacing="4"
          VerticalAlignment="Center">
          <Viewbox Width="14" Height="14" VerticalAlignment="Center">
            <Path
              Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
              Fill="#666666" />
          </Viewbox>
          <TextBlock
            FontWeight="SemiBold"
            Foreground="#666666"
            VerticalAlignment="Center"
            Text="Reference:" />
        </StackPanel>
        
        <TextBox
          Grid.Column="1"
          Margin="8,0,0,0"
          Height="30"
          Padding="12,0,12,0"
          VerticalAlignment="Center"
          VerticalContentAlignment="Center"
          Background="{DynamicResource SystemControlBackgroundChromeLowBrush}"
          BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
          BorderThickness="1"
          CornerRadius="3"
          FontFamily="Cascadia Code,JetBrains Mono,Menlo,Consolas,Liberation Mono"
          FontSize="13"
          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
          Watermark="Enter registry/repository:tag or @digest..."
          Text="{Binding SelectedTagReference}"
          ToolTip.Tip="Press Enter to load manifest details"
          Name="ReferenceTextBox">
          <TextBox.KeyBindings>
            <KeyBinding Command="{Binding LoadManifestByReferenceCommand}" Gesture="Enter" />
          </TextBox.KeyBindings>
        </TextBox>
        
        <Button
          Grid.Column="2"
          Width="32"
          Height="28"
          Margin="6,0,4,0"
          Padding="0"
          Command="{Binding LoadManifestByReferenceCommand}"
          ToolTip.Tip="Search for this reference"
          VerticalAlignment="Center">
          <Path
            Width="14"
            Height="14"
            Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
            Fill="{DynamicResource ButtonForeground}"
            Stretch="Uniform" />
        </Button>
        
        <Button
          Grid.Column="3"
          Width="32"
          Height="28"
          Padding="0"
          Command="{Binding CopyReferenceCommand}"
          ToolTip.Tip="Copy reference to clipboard"
          VerticalAlignment="Center">
          <Path
            Width="14"
            Height="14"
            Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"
            Fill="{DynamicResource ButtonForeground}"
            Stretch="Uniform" />
        </Button>
      </Grid>
    </Border>

    <!--  Row 3: Status bar  -->
    <Border
      Grid.Row="3"
      Height="30"
      Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
      BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
      BorderThickness="0,1,0,0">
      <Grid ColumnDefinitions="*,Auto">
        <TextBlock
          Grid.Column="0"
          Margin="10,0,0,0"
          VerticalAlignment="Center"
          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
          Text="{Binding StatusMessage}" />
        <ProgressBar
          Grid.Column="1"
          Width="100"
          Height="15"
          Margin="0,0,10,0"
          Value="{Binding ProgressValue}"
          Maximum="100"
          IsIndeterminate="{Binding IsProgressIndeterminate}"
          IsVisible="{Binding IsProgressVisible}" />
      </Grid>
    </Border>
  </Grid>
</UserControl>
